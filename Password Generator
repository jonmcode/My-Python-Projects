import random
print("Welcome to Password Generator")
char='abcdefghijklmnopqrstuvwxyz1234567890!@#$%^&*()-_'

while True:
    selected_option = input("Please enter 'c' to generate a password or enter 'q' to quit: ")

    if selected_option == "c":
        password = ''
        len_password = int(input("How many characters would you like your password to be?"))
        while True:
            if len_password < 0:
                len_password = int(input("Please enter a positive integer: "))
            if len_password > 16:
                len_password = int(input("Too long, please enter a positive integer: "))
            else:
                len_password = int(len_password)
            for _ in range(len_password):
                password += random.choice(char)
            print(f"Your password is: {password}")
            break
    elif selected_option == "q":
        print("You selected option 'q'! Quitting Password Generator!")
        break
    else:
        print("You selected an invalid option.")















